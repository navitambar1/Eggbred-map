    <script type="module">
        function loadAppropriateScript() {
          if (/Mobi|Android|iPhone/i.test(navigator.userAgent)) {
            import('./static/js/mobile.js')
              .then(module => {
                if (typeof module.init === 'function') {
                  module.init();
                } else {
                  console.log('Mobile module loaded, but no init function found');
                }
              })
              .catch(error => {
                console.error('Failed to load mobile script:', error);
              });
          } else {
            import('./static/js/main.js')
              .then(module => {
                if (typeof module.init === 'function') {
                  module.init();
                } else {
                  console.log('Main module loaded, but no init function found');
                }
              })
              .catch(error => {
                console.error('Failed to load main script:', error);
              });
          }
        }
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', loadAppropriateScript);
        } else {
          loadAppropriateScript();
        }
      </script>
</body>
</html>
